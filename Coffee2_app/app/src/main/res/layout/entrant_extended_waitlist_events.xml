<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/light_grey"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_event_placeholder"
            android:contentDescription="Event Image"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/event_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date &amp; Time: January 1, 2025 - 5:00 PM"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: Community Center"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/event_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price: $60"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Description: This is a detailed description of the event..."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/waitlist_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Waiting"
            android:textSize="18sp"
            android:textColor="@color/main_blue"
            android:layout_marginBottom="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/leave_waitlist_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave Waitlist"
            android:background="@drawable/rounded_button_bg"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/view_status_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Status"
            android:background="@drawable/rounded_button_bg"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</ScrollView>

